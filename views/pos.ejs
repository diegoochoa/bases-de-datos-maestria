<%- include("./partials/header") %>
        <div class="text-center w-100 bg-light ">
            <div class="container text-center mx-auto">
                <h1>Punto de venta - Bazar de ropa</h1>
            </div>
        </div>
        <div class="container my-5 h-100">
            <div class="jumbotron h-90 my-auto justify-content-center align-self-center text-center bg-light">  
    
                <div class="container h-50 my-auto justify-content-center align-self-center text-center">
                    <div class="row justify-content-center">
                        <div class="col-10 align-self-center text-center">
                            <input class="form-control" type="search" placeholder="Buscar producto..." aria-label="Search">
                        </div> 
                        <div class="col-2 align-self-center text-center"> 
                            <button class="btn btn-outline-success" type="submit">Buscar</button>  
                        </div> 
                    </div>
                    <form action="/pos/save_sell" method="POST">
                        <div class="row justify-content-center mt-5">
                            <div class="col-lg align-self-center text-left">
                                <div class="col-lg">
                                    <div class="form-group">
                                        <label>Seleccionar producto</label>
                                        <select name="producto" class="form-control" placeholder="Producto...">
                                            <% if(productos) { %>
                                            <% for(var producto of productos) { %>
                                            <option value="<%= producto.id %>"><%= producto.descripcion %></option>
                                            <% } %>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                                
                                
                            </div>
                        </div>
                        <div class="row justify-content-center mt-5">
                            <div class="col-lg align-self-center text-left">
                                <label>Agregar numero de empleado</label>
                                <div class="col-lg">
                                    <div class="form-group">
                                        <input type="text" id="numempleado" name="empleado">
                                    </div>
                                </div>
                                
                                
                            </div>

                            <div class="col-lg align-self-center text-left">
                                <label>Agregar numero de cliente</label>
                                <div class="col-lg">
                                    <div class="form-group">
                                        <input type="text" id="numempleado" name="numero_cliente">
                                    </div>
                                </div>
                            </div>
                        </div>

                       
                        <div class="row justify-content-center mt-5 text-right">
                            <div class="col">
                                <button class="btn btn-outline-success" type="submit">Registrar venta</button>  
                            </div>
                        </div>
                    </form>
                    

                   
                </div>
               
            </div>
        </div>
        


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

    </body>
</html>