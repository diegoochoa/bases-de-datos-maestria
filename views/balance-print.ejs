            </thead>
            <tbody>
                <tr>
                    <td scope="row" class="table-primary">Costo</td>
                    <% if(data) { %>
                        <% for(var mes of data) { %>
                            <td><%= mes.costo %></td>
                        <% } %>
                        <td>$<%= data.map(x=> x.costo).reduce((a,b) => a + b, 0) %></td>
                    <% } %>
                </tr>
                <tr>
                    <td scope="row" class="table-primary">Presupuesto</td>
                    <% if(data) { %>
                        <% for(var mes of data) { %>
                            <td><%= mes.presupuesto %></td>
                        <% } %>
                        <td>$</td>
                    <% } %>
                </tr>
                <tr>
                    <td scope="row" class="table-primary">Venta</td>
                    <% if(data) { %>
                        <% for(var mes of data) { %>
                            <td><%= mes.venta %></td>
                        <% } %>
                        <td>$</td>
                    <% } %>
